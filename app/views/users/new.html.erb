<div>
  <h1 class="font-bold text-3xl text-center pb-5">Create an account</h1>
  <%= form_with model: @user, url: users_path, html: { class: "w-full max-w-sm" } do |f| %>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :username, class: "dark:text-gray-100 text-gray-900 block font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      </div>
      <div class="md:w-2/3">
        <%= f.text_field :username, class: "bg-gray-200 text-black appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-900" %>
      </div>
    </div>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :password, class: "dark:text-gray-100 text-gray-900 block font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      </div>
      <div class="md:w-2/3">
        <%= f.password_field :password, class: "bg-gray-200 text-black appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-900" %>
      </div>
    </div>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :password_confirmation, class: "dark:text-gray-100 text-gray-900 block font-bold md:text-right mb-1 md:mb-0 pr-4" %>
      </div>
      <div class="md:w-2/3">
        <%= f.password_field :password_confirmation, class: "bg-gray-200 text-black appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-900" %>
      </div>
    </div>
    <div class="md:flex md:items-center">
      <div class="md:w-1/3"></div>
      <div class="md:w-2/3">
        <%= f.button "Create account", type: "submit", class: "dark:text-gray-100 text-white shadow bg-blue-800 hover:bg-blue-700 focus:shadow-outline focus:outline-none font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  <% end %>
</div>
